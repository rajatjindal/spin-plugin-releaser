{
  "name": "spin-plugin-releaser",
  "version": "1.0.0",
  "type": "module",
  "description": "This provide action for releasing spin plugins automatically",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "lint-fix": "eslint . --ext .ts --fix",
    "package": "ncc build -o dist/ src/release.ts",
    "test": "vitest",
    "all": "npm run build && npm run format && npm run package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rajatjindal/spin-plugin-releaser.git"
  },
  "keywords": [
    "actions",
    "node",
    "plugins",
    "spin"
  ],
  "author": "Rajat Jindal",
  "license": "Apache-2.0",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^6.0.1",
    "@actions/io": "^1.1.3",
    "@actions/tool-cache": "^2.0.1",
    "@octokit/rest": "^22.0.0",
    "crypto": "^1.0.1",
    "fs-extra": "^11.1.0",
    "mustache": "^4.2.0",
    "semver": "^7.7.2",
    "toml": "^3.0.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.19.10",
    "@types/semver": "^7.7.0",
    "@typescript-eslint/parser": "^4.33.0",
    "@types/fs-extra": "^11.0.1",
    "@types/mustache": "^4.2.4",
    "@types/uuid": "^9.0.1",
    "@vercel/ncc": "^0.36.1",
    "eslint": "^7.32.0",
    "eslint-plugin-github": "^4.3.2",
    "eslint-plugin-jest": "^25.3.2",
    "jest": "^27.2.5",
    "prettier": "2.8.4",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^4.9.5",
    "vitest": "^3.2.4"
  }
}